# SAMVIT HRMS - Environment Configuration
# Copy this file to .env and fill in the values

# ===========================================
# PostgreSQL Database Configuration
# ===========================================
POSTGRES_USER=samvituser
POSTGRES_PASSWORD=samvitpassword
POSTGRES_DB=samvitdb
POSTGRES_PORT=5433

# ===========================================
# Redis (DragonflyDB) Configuration
# ===========================================
REDIS_PORT=6379

# ===========================================
# Backend Configuration
# ===========================================
# Database URL for async PostgreSQL connection
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://samvituser:samvitpassword@postgres:5432/samvitdb

# Secret key for JWT tokens (generate with: openssl rand -hex 32)
SECRET_KEY=your-super-secret-key-change-in-production

# Environment: development, staging, production
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=false

# Redis URL for caching and rate limiting
REDIS_URL=redis://dragonfly:6379/0

# ===========================================
# Frontend Configuration
# ===========================================
VITE_API_URL=http://localhost:8000

# ===========================================
# Optional: AI Configuration
# ===========================================
# OPENAI_API_KEY=your-openai-api-key
# AI_MODEL=openai:gpt-4o-mini

